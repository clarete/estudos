import datetime
import time

while True:
    segundo_atual = datetime.datetime.now().second
    if segundo_atual % 2 == 0:
        print(f"Vamo estudar MAAAIS!!! {segundo_atual}")
    else:
        print(f"Vamo estudar MAAAIS AINDAAAA!!! {segundo_atual}")
    time.sleep(.5)

